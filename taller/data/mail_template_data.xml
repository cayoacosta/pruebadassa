<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
		<record id="email_template_ordenes_de_reparacion" model="mail.template">
            <field name="name">Ordenes de reparacion: Send by email</field>
            <field name="model_id" ref="taller.model_ordenes_de_reparacion"/>
            <field name="email_from">${object.env.user.email_formatted |safe}</field>
            <field name="partner_to">${object.partner_id.id}</field>
            <field name="subject">${object.company_id.name} (Orden de reparacion ${object.name or 'n/a' })</field>
            <field name="body_html" type="html">
<div style="margin: 0px; padding: 0px;">
    <p style="margin: 0px; padding: 0px; font-size: 13px;">
        Dear ${object.partner_id.name}
        % if object.partner_id.parent_id:
            (${object.partner_id.parent_id.name})
        % endif
        <br /><br />
        Here is the Orden de reparacion <strong>${object.name}</strong>
        
        amounting in <strong>${format_amount(object.total_orden_de_reparacion, object.currency_id)}</strong>
        from ${object.company_id.name}.
        <br /><br />
        Do not hesitate to contact us if you have any question.
    </p>
</div>
            </field>
            <field name="report_template" ref="action_report_ordenes_de_reparacion"/>
            <field name="report_name">${(object.name or '').replace('/','_')}</field>
            <field name="lang">${object.partner_id.lang}</field>
            <field name="user_signature" eval="False"/>
            <field name="auto_delete" eval="True"/>
        </record>
    </data>
</odoo>
